    <groupId>de.nsmolenskii.experiments.n26</groupId>
    <artifactId>n26-metrics</artifactId>
    <version>1.0.0-SNAPSHOT</version>

    <parent>
        <groupId>org.springframework.boot</groupId>
        <artifactId>spring-boot-starter-parent</artifactId>
